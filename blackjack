import os
from art import logo
import random

def clear():
  os.system('clear')

def deal_card():
  """Returns a random card from the deck."""
  cards = [11, 2, 3, 4, 5, 6, 7, 8, 9, 10, 10, 10, 10]
  card = random.choice(cards)
  return card
  
def calculate_score(cards):
  """Take a list of cards and return the score calculated from the cards."""
  if sum(cards) == 21 and len(cards) == 2:
    return 0
  if 11 in cards and sum(cards) > 21:
    #this way we remove the 11 and add 1 so that it won't be over 21
    cards.remove(11)
    cards.append(1)
    
  return sum(cards)

def compare(user_score, computer_score):
    if user_score == computer_score:
      return "Draw ðŸ¥°"
    elif computer_score == 0:
      return "Lose, opponent has Blackjack ðŸ˜±"
    elif user_score == 0:
      return "Win with a Blackjack ðŸ«¡"
    elif user_score > 21:
      return "You went over. You lose ðŸ˜¥"
    elif computer_score > 21:
      return "Opponent went over. You win ðŸ˜"
    elif user_score > computer_score:
      return "You win ðŸ‘‘"
    else:
      return "You lose âŒ"
      
def play_game():
  
  print(logo)
  
  computer_cards = []
  users_cards = []
  #Setting a flag
  is_game_over = False
  
  for i in range(2):
    users_cards.append(deal_card())
    computer_cards.append(deal_card())
  
  # We created this while loop to continue doing the same thing until flag is false
  while not is_game_over:
    user_score = calculate_score(users_cards)
    computer_score = calculate_score(computer_cards)
    print(f"  Your cards: {users_cards}, current score : {user_score}")
    print(f"  Computer's cards: {computer_cards[0]}")
    
    if user_score == 0 or computer_score == 0 or user_score > 21:
      is_game_over = True
    else:
      user_should_deal = input("Type 'y' to get another card, type 'n' to pass: ")
      if user_should_deal == "y":
        users_cards.append(deal_card())
      else:
        is_game_over = True
  
  while computer_score != 0 and computer_score < 17:
    computer_cards.append(deal_card())
    computer_score = calculate_score(computer_cards)
  
  print(f"  Your final hand: {users_cards}, final score: {user_score}")
  print(f"  Computer's final hand: {computer_cards}, final score: {computer_score}")
  print(compare(user_score, computer_score))
  
while input("Dou you want to play a game of Blackjack? Type 'y' or 'n': ") == "y":
  clear()
  play_game()
